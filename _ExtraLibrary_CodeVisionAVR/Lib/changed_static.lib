#include <changed_static.h>

//***********************************************
uint8_t Changed_Exact_u16(uint16_t value){
    static uint16_t value_last = 0;
    
    if(value != value_last){
        value_last = value;
        return 1;
    }
    else {
        return 0;
    }
}

//***********************************************
uint8_t Changed_Threshold_u16(uint16_t value, uint16_t threshold){
    int16_t dif = 0;
    static uint16_t value_last = 0;
    
    dif = value_last - value;
    if(dif<0){dif = -dif;}
    
    if(dif >= threshold){
        value_last = value;
        return 1;
    }
    else {
        return 0;
    }
}

//***********************************************
uint8_t Changed_Threshold_f32(float value, float threshold){
    float dif = 0;
    static float value_last = 0;
    
    dif = value_last - value;
    if(dif<0){dif = -dif;}
    
    if(dif >= threshold){
        value_last = value;
        return 1;
    }
    else {
        return 0;
    }
}