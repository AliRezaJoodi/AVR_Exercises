#include <button_static.h>
          
//*************************************************
void Button_Config(void){
    #ifdef BUTTON1   
        BUTTON1_DDR=0; BUTTON1_PORT=!PRESSED;
    #endif

    #ifdef BUTTON2  
        BUTTON2_DDR=0; BUTTON2_PORT=!PRESSED;
    #endif

    #ifdef BUTTON3
        BUTTON3_DDR=0; BUTTON3_PORT=!PRESSED;
    #endif
}

#ifdef BUTTON1_PIN
//*************************************************
char Button1_SingleClick(void){
    static bit last_status=!PRESSED; 
    
    if(BUTTON1_PIN==PRESSED && last_status==!PRESSED){
        delay_ms(BUTTONLAG1);
        if(BUTTON1_PIN==PRESSED){
            last_status=PRESSED;
            return 1; 
        } 
    }
    if(BUTTON1_PIN==!PRESSED  && last_status==PRESSED){ 
        delay_ms(BUTTONLAG1);
        if(BUTTON1_PIN==!PRESSED){last_status=!PRESSED;}
    }
    
    return 0; 
}

//*************************************************
char Button1_AutoRepeat_NonBlocking(void){
    static unsigned int i=0;
        
    if(BUTTON1_PIN==PRESSED){
        ++i;
        if(i>=BUTTONLAG2){i=0; return 1;} 
    }
    
    return 0; 
}
#endif

