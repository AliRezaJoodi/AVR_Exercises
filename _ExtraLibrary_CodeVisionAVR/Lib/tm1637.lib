#include <tm1637.h>

#define TM1637_COMMAND_DATA_WRITE   0b01000000  // Data command setting: Write data to display register
#define TM1637_COMMAND_DATA_READ    0b01000010  // Data command setting: Read key scan data

#define TM1637_COMMAND_ADDRESS      0b11000000  // Address command setting
//#define TM1637_I2C_COMM2    0xC0    //11    Address command setting

#define TM1637_COMMAND_DISPLAY      0b10000000  // Display control
//#define TM1637_I2C_COMM3    0x80	//10	Display and control command setting

//uint8_t tm1637_command_address = TM1637_COMMAND_ADDRESS;
//uint8_t tm1637_display = 0b10001111; 

#define TM1637_Delay_us(VALUE)                         delay_us(VALUE);

//***************************************
static inline void TM1637_CLK_SetInput(void){
    ClearBit(TM1637_CLK_DDR, TM1637_CLK_BIT);
    ClearBit(TM1637_CLK_PORT, TM1637_CLK_BIT);
}

//***************************************
static inline void TM1637_CLK_SetOutput(uint8_t status){
    if(status){
        TM1637_CLK_SetInput();
    }
    else{
        SetBit(TM1637_CLK_DDR, TM1637_CLK_BIT);
        ClearBit(TM1637_CLK_PORT, TM1637_CLK_BIT);    
    }
}

//***************************************
static inline void TM1637_DIO_SetInput(void){
    ClearBit(TM1637_DIO_DDR, TM1637_DIO_BIT);
    ClearBit(TM1637_DIO_PORT, TM1637_DIO_BIT);
}

//***************************************
static inline void TM1637_DIO_SetOutput(uint8_t status){
    if(status){
        TM1637_DIO_SetInput();
    }
    else{
        SetBit(TM1637_DIO_DDR, TM1637_DIO_BIT);
        ClearBit(TM1637_DIO_PORT, TM1637_DIO_BIT);    
    }
}

//***************************************
static inline uint8_t TM1637_DIO_GetInput(void){
    //TM1637_DIO_SetInput();
    return GetBit(TM1637_DIO_PIN, TM1637_DIO_BIT);
}

//***************************************
void TM1637_Start(void){
    TM1637_CLK_SetOutput(1);
    TM1637_DIO_SetOutput(1);
    TM1637_Delay_us(TM1637_DELAY*2);
    
    TM1637_DIO_SetOutput(0);
    TM1637_Delay_us(TM1637_DELAY*2);
}

//***************************************
void TM1637_Stop(void){
	TM1637_DIO_SetOutput(0);

    TM1637_CLK_SetOutput(1);
    TM1637_Delay_us(TM1637_DELAY*2);
    
	TM1637_DIO_SetOutput(1);
    TM1637_Delay_us(TM1637_DELAY*2);
}

//***************************************
uint8_t TM1637_WriteByte(uint8_t data){
  ///uint8_t data = d1;
  uint8_t i = 0;
  uint8_t ack = 0;
  
  for(i = 0; i < 8; i++) {
    TM1637_CLK_SetOutput(0);
    TM1637_Delay_us(TM1637_DELAY);

    if (data & 0x01){
        TM1637_DIO_SetOutput(1);
    }
    else{ 
        TM1637_DIO_SetOutput(0);
    }
    TM1637_Delay_us(TM1637_DELAY);

    TM1637_CLK_SetOutput(1);
    TM1637_Delay_us(TM1637_DELAY*2);

    data = data >> 1;
  }

  // Prepare for receiving acknowledgement
  TM1637_CLK_SetOutput(0);
  TM1637_DIO_SetInput();
  TM1637_Delay_us(TM1637_DELAY*4);

  // Read acknowledgement  
  TM1637_CLK_SetOutput(1);
  TM1637_Delay_us(TM1637_DELAY*2); 
  ack = TM1637_DIO_GetInput();
  if(ack == 0){ 
    TM1637_DIO_SetOutput(0);
  } 
  TM1637_CLK_SetOutput(0);
  TM1637_Delay_us(TM1637_DELAY*2);
  
  return ack;
}

//***************************************
void TM1637_SendCommand(uint8_t command){
    TM1637_Start();
    TM1637_WriteByte(command); 
    TM1637_Stop();
}

//***************************************
void TM1637_SetDisplay(uint8_t onoff, uint8_t brightness){
    uint8_t tm1637_command_display = TM1637_COMMAND_DISPLAY;
    
    WriteBit(tm1637_command_display, 3, onoff);
    Write3Bit(tm1637_command_display, 0, brightness);
    
    TM1637_Start();
    TM1637_WriteByte(tm1637_command_display); 
    TM1637_Stop();
}

//***************************************
void TM1637_Config(void){
    TM1637_CLK_SetOutput(1);
    TM1637_DIO_SetOutput(1);

    TM1637_SetDisplay(1, 7);           
}

//***************************************
void TM1637_SetSegments(uint8_t segments[], uint8_t length, uint8_t address){
    uint8_t i=0;
    
    uint8_t tm1637_command_address = TM1637_COMMAND_ADDRESS;
    Write3Bit(tm1637_command_address, 0, address)	
    
    TM1637_Start();
    TM1637_WriteByte(TM1637_COMMAND_DATA_WRITE); 
    TM1637_Stop();
    
	TM1637_Start();
	TM1637_WriteByte(tm1637_command_address);

	for (i=0; i < length; ++i){
	  TM1637_WriteByte( segments[i] );
    }

	TM1637_Stop();   
}

//***************************************
void TM1637_SetSegments_FixedAddress(uint8_t data, uint8_t address){
    uint8_t tm1637_command_address = TM1637_COMMAND_ADDRESS;
    Write3Bit(tm1637_command_address, 0, address)
    
	TM1637_Start();
	TM1637_WriteByte(tm1637_command_address);
	TM1637_WriteByte(data);
	TM1637_Stop();   
}