#include <display7segment1digit_decoder.h>

const uint8_t _7Segment_Data_0To9[10]={
    0x3FU,     // 0     
    0x06U,     // 1
    0x5BU,     // 2
    0x4FU,     // 3
    0x66U,     // 4
    0x6DU,     // 5
    0x7DU,     // 6
    0x07U,     // 7
    0x7FU,     // 8
    0x6FU      // 9
 };

const uint8_t _7Segment_Data_chr[12]={
    0x40U,     // 0:   - 
    0x77U,     // 1,   A
    0x7CU,     // 2,   b
    0x39U,     // 3,   C
    0x5EU,     // 4,   d
    0x79U,     // 5,   E
    0x71U,     // 6,   F
    0x76U,     // 7,   H
    0x38U,     // 8,   L
    0x50U,     // 9,   r
    0x78U,     // 10,  t
    0x3EU      // 11,  U
};

//*****************************************
uint8_t Display7Segment1Digit_DecodeDigit(uint8_t digit,  uint8_t *seg){
    uint8_t error =0;
    
    if( digit > 9){
        error =1;
        return error;
    }
    
    *seg = _7Segment_Data_0To9[digit];
    return error;
}

//*****************************************
uint8_t Display7Segment1Digit_DecodeChr(uint8_t index,  uint8_t *seg){
    uint8_t error =0; 
    
    if( index > 11){
        error =1;
        return error;
    }
    
    *seg = _7Segment_Data_chr[index];
    return error;
}

//*****************************************
void Display7Segment1Digit_ToggleSegments(uint8_t *seg){
    *seg = ~(*seg);
}

